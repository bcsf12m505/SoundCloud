@{
    ViewBag.Title = "DeleteSongs";
}

@model OMC.Models.Admin


<!DOCTYPE html>

<html>

<head>


    <style>
        body {
            background-color: white;
        }

        h5 {
            color: red;
        }

        span {
            color: red;
        }

        p {
            color: aliceblue;
        }
    </style>

    <title>Home</title>

    <link href="/Content/abootstrap.css" rel="stylesheet" />

    <script src="/Scripts/bootstrap.js"> </script>

    <link href="/Content/Admin.css" rel="stylesheet" />




</head>


<body>



    <br> <br> <br> <br> <br>




    <center>



        <div class="body">

            <div class="fronttext">

                <br>

                <h1 class="animated bounceInUp" style="margin-right:110px; margin-bottom: 50px; color: #FF0000; font-family: 'Comic Sans MS'; ">     <span class="glyphicon glyphicon-remove"></span> <br> <p> Delete Songs </p> </h1>

                <form style="margin-bottom:30px" method="post" action="/Admin/Delete">
                  <br>  <input type="text" name="Name" class="form-control" placeholder="Song's Name" required>
                  
                     <br> <br> <button type="submit" class="btn btn-lg btn-primary btn-block">Delete</button>
                    
                    @if(ViewBag.Delete != null)
                    {


                        if(ViewBag.Delete.Equals("Success"))
                        {
                            <h1 class="animated bounceInUp" style="margin-right:110px; margin-bottom: 50px; color: #FF0000; font-family: 'Comic Sans MS'; ">  <p> Song Deleted ! </p> </h1>

                        }
                        else if(ViewBag.Delete.Equals("Fail"))
                        {
                            <h1 class="animated bounceInUp" style="margin-right:110px; margin-bottom: 50px; color: #FF0000; font-family: 'Comic Sans MS'; ">  <p> Song doesn't exist ! </p> </h1>

                        }
                    
                    }


                </form>



            </div>

        </div>

    </center>





    <!-- </body> -->

</body>

</html>

